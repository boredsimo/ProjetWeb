@model ProjetWeb.Models.Vol

@{
    ViewData["Title"] = "Créer un vol.";
}

<h1>Créer un vol.</h1>

<h4>Vol</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Compagnie" class="control-label"></label>
                <input asp-for="Compagnie" id="compagnie" class="form-control" />
                <span asp-validation-for="Compagnie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeVol" class="control-label"></label>
                <input asp-for="CodeVol" id="codeVol" class="form-control" />
                <span asp-validation-for="CodeVol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ville" class="control-label"></label>
                <input asp-for="Ville" id="ville" class="form-control" />
                <span asp-validation-for="Ville" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeurePrevue" class="control-label"></label>
                <input asp-for="HeurePrevue" id="heurePrevue" class="form-control" />
                <span asp-validation-for="HeurePrevue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeureRevisee" class="control-label"></label>
                <input asp-for="HeureRevisee" id="heureRevisee" class="form-control" />
                <span asp-validation-for="HeureRevisee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Statut" class="control-label"></label>
                <input asp-for="Statut" id="statut" class="form-control" />
                <span asp-validation-for="Statut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" id="createbt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     <script src="~/js/signalr/dist/browser/signalr.js"></script> 
