    <h4>Vol</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Compagnie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Compagnie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodeVol)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodeVol)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ville)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ville)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HeurePrevue)
        </dt>
        <dd class = "col-sm-10">
