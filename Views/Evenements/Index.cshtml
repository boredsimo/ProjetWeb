@model IEnumerable<ProjetWeb.Models.Evenement>

@{
    ViewData["Title"] = "Événements";
}

<h1>Événements</h1>

<p>
    <a asp-action="Create">Créer un nouvel événement.</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDVol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeureRevisee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDVol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureRevisee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EvenementID">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.EvenementID">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.EvenementID">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
